<Page
    x:Class="AudioSwitcher.UI.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:AudioSwitcher.UI.Views"
    mc:Ignorable="d">

    <NavigationView x:Name="NavView" 
                    PaneDisplayMode="Auto" 
                    ItemInvoked="NavView_ItemInvoked" 
                    Loaded="NavView_Loaded">
        <NavigationView.MenuItems>
            <NavigationViewItem Tag="OutputDevices" Icon="Audio" Content="Output Devices" />
            <NavigationViewItem Tag="Hotkeys" Icon="Keyboard" Content="Hotkeys" />
        </NavigationView.MenuItems>



        <Frame x:Name="ContentFrame" />
    </NavigationView>
</Page>
