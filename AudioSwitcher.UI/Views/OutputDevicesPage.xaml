<Page
    x:Class="AudioSwitcher.UI.Views.OutputDevicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:AudioSwitcher.UI.Converters"
    xmlns:models="using:AudioSwitcher.Core.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:DeviceIconConverter x:Key="DeviceIconConverter"/>
        <converters:FavoriteIconConverter x:Key="FavoriteIconConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <DataTemplate x:Key="DashboardDeviceTemplate" x:DataType="models:AudioDevice">
            <Grid Padding="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <FontIcon Grid.Column="0" Glyph="{x:Bind Converter={StaticResource DeviceIconConverter}}" 
                          FontFamily="Segoe Fluent Icons" FontSize="24" Margin="0,0,16,0" 
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind DisplayName}" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind DisplaySubName}" 
                               Style="{ThemeResource BodyTextBlockStyle}" 
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               Visibility="{x:Bind HasSubName, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Output Devices" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

        <ListView x:Name="DeviceList" Grid.Row="1" ItemsSource="{x:Bind ViewModel.Devices}" 
                  ItemTemplate="{StaticResource DashboardDeviceTemplate}"
                  SelectionMode="Single"
                  SelectedItem="{x:Bind ViewModel.DefaultDevice, Mode=OneWay}"
                  SelectionChanged="DeviceList_SelectionChanged">
        </ListView>
    </Grid>
</Page>
