<Page
    x:Class="AudioSwitcher.UI.Views.OutputDevicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:AudioSwitcher.UI.Controls"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Output Devices" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

        <controls:DeviceListControl x:Name="DeviceListControl" Grid.Row="1" IsCompact="False"/>
    </Grid>
</Page>
