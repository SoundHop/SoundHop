<Page
    x:Class="AudioSwitcher.UI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

        <StackPanel Grid.Row="1" Spacing="20" MaxWidth="600" HorizontalAlignment="Left">
            
            <StackPanel Spacing="10">
                <TextBlock Text="General" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <ToggleSwitch x:Name="RunAtStartupToggle" Header="Run at Startup" Toggled="RunAtStartupToggle_Toggled"/>
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock Text="System Tray" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <ToggleSwitch x:Name="ShowTrayIconToggle" Header="Show System Tray Icon" IsOn="True" Toggled="ShowTrayIconToggle_Toggled"/>
                <ToggleSwitch x:Name="MinimizeToTrayToggle" Header="Minimize to System Tray" IsOn="False" Toggled="MinimizeToTrayToggle_Toggled"/>
                <ToggleSwitch x:Name="CloseToTrayToggle" Header="Close Button Minimizes to System Tray" IsOn="True" Toggled="CloseToTrayToggle_Toggled"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
