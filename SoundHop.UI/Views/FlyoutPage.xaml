<Page
    x:Class="SoundHop.UI.Views.FlyoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:SoundHop.UI.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header: SelectorBar + Sort Button inline -->
        <Grid Grid.Row="0" Margin="8,8,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <SelectorBar x:Name="DeviceTypeSelector" Grid.Column="0" SelectionChanged="DeviceTypeSelector_SelectionChanged">
                <SelectorBarItem x:Name="OutputsTab" Text="Outputs" IsSelected="True">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE767;" FontSize="14"/>
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem x:Name="InputsTab" Text="Inputs">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE720;" FontSize="14"/>
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
            </SelectorBar>
            
            <!-- Sort/View Options Button -->
            <DropDownButton x:Name="SortOptionsButton" Grid.Column="1"
                           VerticalAlignment="Center"
                           Background="Transparent"
                           BorderThickness="0"
                           Padding="8,4">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon Glyph="&#xE8CB;" FontSize="12"/>
                    <TextBlock Text="Sort" FontSize="12"/>
                </StackPanel>
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                        <MenuFlyoutItem x:Name="SortByFriendlyName" Text="Sort by friendly name" Click="SortByFriendlyName_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon x:Name="SortByFriendlyNameCheck" Glyph="&#xE73E;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Name="SortByDeviceName" Text="Sort by device name" Click="SortByDeviceName_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon x:Name="SortByDeviceNameCheck" Glyph="&#xE73E;" Visibility="Collapsed"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Name="ShowDisabledMenuItem" Text="Show disabled devices" Click="ShowDisabledToggle_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon x:Name="ShowDisabledCheck" Glyph="&#xE73E;" Visibility="Collapsed"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Name="ShowDisconnectedMenuItem" Text="Show disconnected devices" Click="ShowDisconnectedToggle_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon x:Name="ShowDisconnectedCheck" Glyph="&#xE73E;" Visibility="Collapsed"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        </Grid>
        
        <controls:DeviceListControl x:Name="DeviceListControl" Grid.Row="1" IsCompact="True" ShowSortHeader="False"/>
    </Grid>
</Page>
