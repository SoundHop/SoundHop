<Page
    x:Class="SoundHop.UI.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:SoundHop.UI.Views"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar Drag Region -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" VerticalAlignment="Stretch" IsHitTestVisible="True">
            <TextBlock Text="SoundHop" 
                       Style="{ThemeResource CaptionTextBlockStyle}" 
                       Margin="48,0,0,0"
                       VerticalAlignment="Center"/>
        </Grid>

        <NavigationView x:Name="NavView" 
                        Grid.Row="1"
                        PaneDisplayMode="Auto"
                        IsBackButtonVisible="Collapsed"
                        IsTitleBarAutoPaddingEnabled="False"
                        ItemInvoked="NavView_ItemInvoked" 
                        Loaded="NavView_Loaded">
            <NavigationView.MenuItems>
                <NavigationViewItem Tag="OutputDevices" Icon="Volume" Content="Output Devices" />
                <NavigationViewItem Tag="InputDevices" Content="Input Devices">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE720;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Tag="Hotkeys" Icon="Keyboard" Content="Hotkeys" />
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Page>
